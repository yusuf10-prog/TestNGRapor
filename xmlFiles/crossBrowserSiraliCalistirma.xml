<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="cross browser paralel calistirma" thread-count="2" parallel="tests">
    <test name="chrome ile calisacak testler">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="tests.day20_croosBrowserCalisacakTestler.C01_AmazonSearch"></class>

        </classes>
    </test>
    <test name="firefox ile calisacak testler">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="tests.day20_croosBrowserCalisacakTestler.C02_AlertsTesti"></class>
        </classes>
    </test>
</suite>




